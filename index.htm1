<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Consulta de Código de Depósito</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f2f2f2;
      padding: 20px;
    }
    .box {
      max-width: 400px;
      background: white;
      padding: 20px;
      border-radius: 8px;
      margin: auto;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    input, button {
      width: 100%;
      padding: 10px;
      margin-top: 10px;
      font-size: 16px;
    }
    button {
      background: #0066cc;
      color: white;
      border: none;
      border-radius: 5px;
    }
    .result {
      margin-top: 15px;
      font-weight: bold;
    }
  </style>
</head>
<body>

<div class="box">
  <h3>Consulta tu código</h3>

  <input type="text" id="dato" placeholder="Cédula o Nombre">

  <button onclick="buscar()">Buscar</button>

  <div class="result" id="resultado"></div>
</div>

<script>
  const clientes = {
    "00123456789": "COD-1001",
    "Juan Perez": "COD-1002",
    "Maria Lopez": "COD-1003"
  };

  function buscar() {
    const dato = document.getElementById("dato").value.trim();
    const resultado = clientes[dato];

    document.getElementById("resultado").innerHTML =
      resultado ? "Tu código es: " + resultado : "No encontrado";
  }
</script>

</body>
</html>
